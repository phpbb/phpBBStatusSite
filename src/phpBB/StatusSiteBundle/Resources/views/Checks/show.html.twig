{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Checks</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Status_code</th>
                <td>{{ entity.statuscode }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Check_time</th>
                <td>{{ entity.checktime|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Pingdom_id</th>
                <td>{{ entity.pingdomid }}</td>
            </tr>
            <tr>
                <th>Lastresponse</th>
                <td>{{ entity.lastresponse }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_checks') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_checks_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_checks_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sites</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Front_page</th>
                <td>{{ entity.frontpage }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Statuscode</th>
                <td>{{ entity.statusCode }}</td>
            </tr>
            <tr>
                <th>Major</th>
                <td>{{ entity.major }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ entity.team }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
      <li>
        <a href="{{ path('admin_sites') }}">
          Back to the list
        </a>
      </li>
      <li>
        <a href="{{ path('admin_sites_edit', { 'id': entity.id }) }}">
          Edit
	</a>
      </li>
      <li>
        <form action="{{ path('admin_sites_delete', { 'id': entity.id }) }}" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          {{ form_widget(delete_form) }}
          <button type="submit">Delete</button>
        </form>
      </li>
    </ul>
{% endblock %}

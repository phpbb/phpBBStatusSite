{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sites list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Url</th>
                <th>Front_page</th>
                <th>Status</th>
                <th>Statuscode</th>
                <th>Major</th>
                <th>Team</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_sites_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.frontpage }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.statusCode }}</td>
                <td>{{ entity.major }}</td>
                <td>{{ entity.team }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_sites_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_sites_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_sites_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
